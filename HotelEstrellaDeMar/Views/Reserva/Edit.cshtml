
<h2>Editar Reserva</h2>

<div>
    <form asp-action="EditarReserva" method="post">
        <div>
            <input type="hidden" name="idReserva" value="@ViewBag.Reserva.IDReserva" />
            <label>Ingrese una nueva fecha de CheckIn</label>
            <input type="date" name="fechaCheckIn" required value="@ViewBag.Reserva.FechaCheckIn.ToString("yyyy-MM-dd")" />            

            <label>Ingrese una nueva fecha de CheckOut</label>
            <input type="date" name="fechaCheckOut" required value="@ViewBag.Reserva.FechaCheckOut.ToString("yyyy-MM-dd")" />
        </div>
        <div>
            <label>Seleccione un tipo de Habitacion</label>            
            <select name="tipoHab" required">
                <option value="">--Por favor seleccione una opcion--</option>
                <option value="Simple">Simple</option>
                <option value="Doble">Doble</option>
                <option value="Suite">Suite</option>
            </select>
        </div>        
        <div>
            <input type="submit" value="Modificar Reserva">
        </div>
    </form>

</div>