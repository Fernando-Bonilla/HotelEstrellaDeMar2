<div class="container mt-5">
    <h1 class="mb-4">Listar habitaciones disponibles</h1>

    <form asp-action="MostrarHabDisponibles" method="post">
        <div class="mb-3">
            <label for="fechaCheckIn" class="form-label">Ingrese una fecha de CheckIn</label>
            <input type="date" class="form-control" name="fechaCheckIn" id="fechaCheckIn" required />
        </div>

        <div class="mb-3">
            <label for="fechaCheckOut" class="form-label">Ingrese una fecha de CheckOut</label>
            <input type="date" class="form-control" name="fechaCheckOut" id="fechaCheckOut" required />
        </div>

        <div class="mb-3">
            <label for="tipoHab" class="form-label">Seleccione un tipo de Habitacion</label>
            <select class="form-select" name="tipoHab" id="tipoHab" required>
                <option value="">--Por favor seleccione una opcion--</option>
                <option value="Simple">Simple</option>
                <option value="Doble">Doble</option>
                <option value="Suite">Suite</option>
            </select>
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Consultar">
        </div>
    </form>

    @if (ViewBag.HabitacionesDisponibles != null && ViewBag.HabitacionesDisponibles.Count > 0)
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>N° Habitacion</th>
                        <th>Tipo Habitacion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Habitacion habitacion in ViewBag.HabitacionesDisponibles)
                    {
                        <tr>
                            <td>@habitacion.NumHabitacion</td>
                            <td>@habitacion.TipoHabitacion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
